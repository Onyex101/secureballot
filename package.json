{
  "name": "secureballot",
  "version": "1.0.0",
  "description": "A secure API for the Nigerian hybrid encryption-based voting system with USSD integration",
  "main": "dist/server.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:coverage": "jest --coverage",
    "db:create": "ts-node ./src/scripts/create-db.ts",
    "db:migrate": "sequelize-cli db:migrate --migrations-path src/db/migrations",
    "db:migrate:nossl": "DB_USE_SSL=false sequelize-cli db:migrate --migrations-path src/db/migrations",
    "db:migrate:undo": "sequelize-cli db:migrate:undo --migrations-path src/db/migrations",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all --migrations-path src/db/migrations",
    "db:seed": "sequelize-cli db:seed:all --seeders-path src/db/seeders",
    "db:seed:nossl": "DB_USE_SSL=false sequelize-cli db:seed:all --seeders-path src/db/seeders",
    "db:seed:small:nossl": "DB_USE_SSL=false npm run db:seed:small",
    "db:seed:undo": "node src/db/seeders/run-optimized-seeder.js --undo",
    "db:seed:optimized": "node --max-old-space-size=4096 src/db/seeders/run-optimized-seeder.js",
    "db:seed:optimized:gc": "node --max-old-space-size=4096 --expose-gc src/db/seeders/run-optimized-seeder.js",
    "db:seed:fast": "DISABLE_CONSTRAINTS=true DISABLE_INDEXES=true node --max-old-space-size=4096 --expose-gc src/db/seeders/run-optimized-seeder.js",
    "db:seed:small": "SEED_BATCH_SIZE=200 SEED_MAX_VOTERS_PER_STATE=2000 node src/db/seeders/run-optimized-seeder.js",
    "db:seed:large": "SEED_BATCH_SIZE=10000 SEED_MAX_VOTERS_PER_STATE=50000 DISABLE_CONSTRAINTS=true DISABLE_INDEXES=true node --max-old-space-size=8192 --expose-gc src/db/seeders/run-optimized-seeder.js",
    "db:seed:debug": "DEBUG=true node src/db/seeders/run-optimized-seeder.js",
    "swagger-autogen": "ts-node src/scripts/swagger-autogen.ts",
    "prepare": "husky install",
    "e2e": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js && docker compose -f docker-compose.test.yml down",
    "e2e:auth": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js auth && docker compose -f docker-compose.test.yml down",
    "e2e:elections": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js elections && docker compose -f docker-compose.test.yml down",
    "e2e:ussd": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js ussd && docker compose -f docker-compose.test.yml down",
    "e2e:mobile": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js mobile && docker compose -f docker-compose.test.yml down",
    "e2e:all": "docker compose -f docker-compose.test.yml up -d && node tests/e2e/index.js auth elections ussd mobile && docker compose -f docker-compose.test.yml down",
    "e2e:staging": "node tests/e2e/index.js --env staging"
  },
  "keywords": [
    "voting",
    "election",
    "nigeria",
    "ussd",
    "e-voting",
    "hybrid-encryption"
  ],
  "author": "Onyekachi A. Okoye",
  "license": "ISC",
  "private": true,
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "eciesjs": "^0.4.14",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.10.0",
    "pg": "^8.13.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "sequelize": "^6.37.6",
    "sequelize-typescript": "^2.1.6",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.4.5",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@codegrenade/naija-faker": "^1.0.5",
    "@faker-js/faker": "^9.6.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.11",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.8",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/e2e/tests/**/*.test.js"
    ]
  }
}
